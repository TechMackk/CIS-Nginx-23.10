# Managed by Ansible - DO NOT EDIT MANUALLY
# Virtual Host: {{ item.server_name }}

{% if item.ssl_enabled | default(true) and item.listen_port | default(80) == 80 %}
# HTTP to HTTPS redirect
server {
    listen {{ item.listen_port | default(80) }};
    listen [::]:{{ item.listen_port | default(80) }};
    server_name {{ item.server_name }};
    
    # Redirect all HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}
{% endif %}

{% if item.ssl_enabled | default(true) %}
# HTTPS server
server {
    listen {{ item.listen_ssl_port | default(443) }} ssl http2;
    listen [::]:{{ item.listen_ssl_port | default(443) }} ssl http2;
    server_name {{ item.server_name }};
    
    # Document root
    root {{ item.root | default('/var/www/html') }};
    index {{ item.index | default('index.html index.htm') }};
    
    # SSL configuration
    ssl_certificate {{ ssl_certificate_path }};
    ssl_certificate_key {{ ssl_certificate_key_path }};
    
    # Logging
    access_log {{ item.access_log | default(nginx_log_dir + '/' + item.server_name + '-access.log') }};
    error_log {{ item.error_log | default(nginx_log_dir + '/' + item.server_name + '-error.log') }};
    
    # Security headers
    include {{ nginx_config_dir }}/conf.d/security.conf;
    
    {% if rate_limiting_enabled %}
    # Rate limiting
    limit_req zone={{ rate_limit_zone }} burst={{ rate_limit_burst }} {% if rate_limit_nodelay %}nodelay{% endif %};
    {% endif %}
    
    {% if connection_limit_enabled %}
    # Connection limiting
    limit_conn {{ connection_limit_zone }} {{ connection_limit_per_ip }};
    {% endif %}
    
    # Main location
    location / {
        try_files $uri $uri/ =404;
    }
    
    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Custom error pages
    error_page 403 /403.html;
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
}
{% else %}
# HTTP server (no SSL)
server {
    listen {{ item.listen_port | default(80) }};
    listen [::]:{{ item.listen_port | default(80) }};
    server_name {{ item.server_name }};
    
    root {{ item.root | default('/var/www/html') }};
    index {{ item.index | default('index.html index.htm') }};
    
    access_log {{ item.access_log | default(nginx_log_dir + '/' + item.server_name + '-access.log') }};
    error_log {{ item.error_log | default(nginx_log_dir + '/' + item.server_name + '-error.log') }};
    
    include {{ nginx_config_dir }}/conf.d/security.conf;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    location ~ /\. {
        deny all;
    }
}
{% endif %}

